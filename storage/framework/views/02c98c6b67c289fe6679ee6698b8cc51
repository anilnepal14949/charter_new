<script type="text/javascript">
	$(document).ready(function(){
		$('#loginForm').on('keyup keypress', function(e) {
		  var keyCode = e.keyCode || e.which;
		  if (keyCode === 13) { 
		    e.preventDefault();
		    return false;
		  }
		});
	});
</script>
