			<table class="table">
				<tbody>
					<?php $i = 1; ?>
					<?php foreach($posts as $post): ?>
						<tr>
							<td> <?php echo e($i); ?>. </td>
							<td> <?php echo html_entity_decode($post->title); ?> </td>
							<td> <a href="<?php echo e(route('posts.edit',$post->id)); ?>" class="btn btn-xs btn-info" data-toggle="tooltip" title="Edit Post..."><span class="fa fa-pencil"></span></a>
							<form method="POST" action="<?php echo e(route('posts.destroy',$post->id)); ?>" id="deletePostForm<?php echo e($i); ?>">
								<?php echo e(csrf_field()); ?>

								<button type="button" class="btn btn-xs btn-danger" data-toggle="tooltip" title="Delete Post..."><span class="fa fa-trash" onclick="deleteThis('deletePostForm<?php echo e($i); ?>');"></span></button>
								<input type="hidden" name="_method" value="delete" />
							</form>
							</td>
						</tr>
						<?php $i++; ?>
					<?php endforeach; ?>
				</tbody>
			</table>
		</div>
